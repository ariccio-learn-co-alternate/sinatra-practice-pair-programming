<div class="container">
  <header><img src="images/corneal-small.png" class="img-responsive main-image"></header>
  <div class="col-md-8 col-md-offset-2">
    <h2>Doggies!</h2>

    <div class="content">
        <form action="/dogs" method="post">
            <input type="text" name="name" placeholder="doggy name">
            <input type="number" name="age" placeholder="doggy age">
            <input type="text" name="breed" placeholder="doggy breed">
            <input type="submit" value="submit">
        </form>
    </div>

    <div class="sidebar">
      <h3>Current doggies:</h3>
        <%Dog.all.each do |dog|%>
        <li>Doggy name: <%=dog.name%>, Age: <%=dog.age%>, Breed: <%=dog.breed%></li>
        <%end%>

    </div>

  </div>
</div>
